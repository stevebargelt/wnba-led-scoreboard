{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create venv",
      "type": "shell",
      "command": "python3 -m venv .venv",
      "problemMatcher": []
    },
    {
      "label": "Install requirements",
      "type": "shell",
      "command": "bash -lc 'source .venv/bin/activate && pip install -r requirements.txt'",
      "problemMatcher": [],
      "dependsOn": ["Create venv"]
    },
    {
      "label": "Install rgbmatrix (bindings)",
      "type": "shell",
      "command": "bash -lc 'bash scripts/install_rgbmatrix.sh'",
      "problemMatcher": []
    },
    {
      "label": "Hardware Self-Test (demo.py)",
      "type": "shell",
      "command": "bash -lc 'bash scripts/hardware_self_test.sh'",
      "problemMatcher": []
    },
    {
      "label": "Fetch WNBA assets (logos/colors)",
      "type": "shell",
      "command": "bash -lc 'source .venv/bin/activate && python scripts/fetch_wnba_assets.py'",
      "problemMatcher": []
    },
    {
      "label": "Check assets (favorites/logos)",
      "type": "shell",
      "command": "bash -lc 'source .venv/bin/activate && python scripts/check_assets.py'",
      "problemMatcher": []
    },
    {
      "label": "Run (sim once)",
      "type": "shell",
      "command": "bash -lc 'source .venv/bin/activate && python app.py --sim --once'",
      "dependsOn": ["Install requirements"],
      "problemMatcher": []
    },
    {
      "label": "Run (matrix loop)",
      "type": "shell",
      "command": "bash -lc 'source .venv/bin/activate && python app.py'",
      "dependsOn": ["Install requirements"],
      "problemMatcher": []
    },
    {
      "label": "Run (demo sim)",
      "type": "shell",
      "command": "bash -lc 'source .venv/bin/activate && python app.py --sim --demo'",
      "dependsOn": ["Install requirements"],
      "problemMatcher": []
    }
  ]
}
