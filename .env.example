# Matrix hardware
MATRIX_WIDTH=64
MATRIX_HEIGHT=32
MATRIX_CHAIN_LENGTH=1
MATRIX_PARALLEL=1
MATRIX_GPIO_SLOWDOWN=2
MATRIX_BRIGHTNESS=80
MATRIX_HARDWARE_MAPPING=adafruit-hat
MATRIX_PWM_BITS=11

# App settings
TIMEZONE=America/Chicago
REFRESH_PREGAME_SEC=30
REFRESH_INGAME_SEC=5
REFRESH_FINAL_SEC=60

# Rendering
SIM_MODE=false
DEMO_MODE=false
LIVE_LAYOUT=stacked
LOGO_VARIANT=mini

# Network resilience
ESPN_CACHE_TTL=300
ESPN_STALE_CACHE_MAX_AGE=3600
ESPN_CIRCUIT_FAILURE_THRESHOLD=3
ESPN_MAX_FALLBACK_AGE_MINUTES=30

# NHL API settings
NHL_HTTP_TIMEOUT=10
NHL_CACHE_TTL=300
NHL_STALE_CACHE_MAX_AGE=3600
NHL_CIRCUIT_FAILURE_THRESHOLD=3
NHL_MAX_FALLBACK_AGE_MINUTES=30

# Supabase connection (for sports/leagues configuration)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key

# Device identification (optional - for device-specific configs)
DEVICE_ID=

# Multi-sport mode
MULTI_SPORT_MODE=false
LEGACY_MODE=false
ENABLE_WNBA=true
ENABLE_NHL=false
SPORT_PRIORITIES=wnba,nhl
LIVE_GAME_BOOST=true
FAVORITE_TEAM_BOOST=true
CLOSE_GAME_BOOST=true
CONFLICT_RESOLUTION=priority
