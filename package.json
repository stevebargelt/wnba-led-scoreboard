{
  "name": "wnba-led-scoreboard",
  "version": "1.0.0",
  "private": true,
  "description": "WNBA LED Scoreboard System",
  "scripts": {
    "prepare": "husky install",
    "test": "npm run test:python && npm run test:web-admin",
    "test:python": "python -m unittest discover tests -v",
    "test:web-admin": "cd web-admin && npm run test -- --watchman=false --coverage",
    "test:ci": "npm run test:python && cd web-admin && npm run test:ci"
  },
  "workspaces": [
    "web-admin"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "lint-staged": {
    "web-admin/src/**/*.{ts,tsx,js,jsx}": [
      "cd web-admin && npm run lint:fix",
      "cd web-admin && npm run format"
    ],
    "web-admin/src/**/*.{ts,tsx,js,jsx,json,css,md}": [
      "cd web-admin && npm run format"
    ]
  }
}